<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_listview_margin"
    android:paddingLeft="@dimen/activity_listview_margin"
    android:paddingRight="@dimen/activity_listview_margin"
    android:paddingTop="@dimen/activity_listview_margin"
    android:background="@drawable/bg_listview"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.atomickitten.likeanappleface.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ListView

        android:id="@+id/listview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:choiceMode="singleChoice" />


</LinearLayout>
